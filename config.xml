<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kevinpermana.absensirpl"
    version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets">

    <name>Absensi Jurusan RPL Muhtiga</name>

    <description>
        Aplikasi Absensi Jurusan RPL Muhtiga
    </description>

    <author email="kevinpermana@developer.com">
        Kevin Permana
    </author>

    <content src="index.html"/>

    <access origin="*"/>
    <allow-navigation href="*"/>

    <platform name="android">
        <preference name="android-minSdkVersion" value="21"/>
        <preference name="android-targetSdkVersion" value="33"/>
        <preference name="Fullscreen" value="true"/>
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="2500" />
        <splash src="resources/android/splash.png" />

    </platform>
</widget>
